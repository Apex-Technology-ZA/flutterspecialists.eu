---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection, getEntry } from "astro:content";

export async function getStaticPaths() {
  const entries = await getCollection("trainings");
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { slug: entry.slug },
  }));
}

const { slug } = Astro.props as { slug: string };
const training = await getEntry("trainings", slug);
if (!training) {
  throw new Error(`Training not found for slug: ${slug}`);
}
const data = training.data;
---

<BaseLayout title={`${data.title} â€” Training`} description={data.description}>
  <section class="container py-16">
    <a href="/training" class="text-sm text-primary hover:underline">&larr; All trainings</a>

    <h1 class="mt-2 text-3xl font-bold">{data.title}</h1>
    <p class="mt-3 text-gray-700 max-w-3xl">{data.description}</p>

    <div class="mt-4 flex flex-wrap items-center gap-3 text-sm text-gray-600">
      {data.duration && <span class="rounded bg-gray-100 px-2 py-1">{data.duration}</span>}
      {data.mode && <span class="rounded bg-gray-100 px-2 py-1 capitalize">{data.mode}</span>}
      {data.schedule && <span class="rounded bg-gray-100 px-2 py-1">{data.schedule}</span>}
    </div>

    {data.heroImage && (
      <img src={data.heroImage} alt="" class="mt-6 rounded border" loading="lazy" />
    )}

    {data.outline?.length ? (
      <div class="mt-8">
        <h2 class="text-xl font-semibold">Workshop outline</h2>
        <ul class="mt-3 list-disc pl-6 space-y-1 text-gray-700">
          {data.outline.map((item) => <li>{item}</li>)}
        </ul>
      </div>
    ) : null}

    <div class="mt-8 flex flex-wrap gap-3">
      {data.calendlyLink ? (
        <a
          href={data.calendlyLink}
          class="inline-flex items-center rounded bg-primary px-5 py-3 text-white hover:bg-secondary"
          rel="noopener"
        >
          Register
        </a>
      ) : (
        <a
          href="/contact"
          class="inline-flex items-center rounded bg-primary px-5 py-3 text-white hover:bg-secondary"
        >
          Enquire to schedule
        </a>
      )}
      <a
        href="/contact"
        class="inline-flex items-center rounded border border-gray-300 px-5 py-3 text-gray-700 hover:bg-gray-50"
      >
        Questions? Contact us
      </a>
    </div>
  </section>
</BaseLayout>