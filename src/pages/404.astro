---
import BaseLayout from "@layouts/BaseLayout.astro";
---
<BaseLayout title="Page not found — Flutter Specialists" description="The page you were looking for could not be found." noindex={true}>
  <section class="container py-24 text-center">
    <h1 class="text-5xl font-bold">404</h1>
    <p class="mt-3 text-gray-700">We couldn’t find that page.</p>
    <p class="mt-1">
      <a href="/" class="text-primary hover:underline">Go back home</a>
    </p>
  </section>
</BaseLayout>